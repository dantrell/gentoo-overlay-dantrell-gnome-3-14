 AC_SUBST(SYSTEMD_LIBS)
 
+SYSTEMD_CFLAGS="$SYSTEMD_CFLAGS $ELOGIND_CFLAGS"
+SYSTEMD_LIBS="$SYSTEMD_LIBS $ELOGIND_LIBS"
